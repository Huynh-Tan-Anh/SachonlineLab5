@{ 
    Layout = null; 
} 

<!DOCTYPE html>

<html>
<head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        @Styles.Render("~/Content/Admin/cs")
        <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">

        <!-- Main css -->
        <link rel="stylesheet" href="~/cssAccount/styleAccount.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f1f1f1;
            }
            .sign-in {
                padding-top: 50px;
            }

            .form-title {
                text-align: center;
            }

            img {
                margin-top: 50px;
            }

            .form-group {
                position: relative;
            }
            /* CSS cho nút toggle */
            .toggle-password {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
                transition: transform 0.2s ease;
            }

                /* CSS cho biểu tượng "eye" */
                .toggle-password i {
                    transition: transform 0.2s ease;
                }

                /* Hiệu ứng khi hover */
                .toggle-password:hover {
                    transform: translateY(-50%) scale(1.2); /* Scale to make it slightly bigger on hover */
                }

                .toggle-password:hover i {
                    transform: scale(1.2); /* Scale the icon on hover */
                }
            .alert {
                padding: 10px;
                margin-bottom: 10px;
                color: red;
            }

            .signin-content {
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .signin-image {
                width: 50%;
                text-align: center;
                padding-right: 30px;
            }

            .signin-form {
                width: 50%;
                padding-left: 30px;
            }

            .form-group {
                margin-bottom: 20px;
            }

                .form-group label {
                    display: block;
                    margin-bottom: 5px;
                }

                .form-group input {
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 4px;
                }

            .form-button {
                text-align: center;
            }

                .form-button input {
                    width: auto;
                    padding: 10px 20px;
                    background-color: #4CAF50;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                }

            .social-login {
                text-align: center;
                margin-top: 20px;
            }

                .social-login .social-label {
                    display: block;
                    margin-bottom: 10px;
                }

                .social-login .socials {
                    list-style-type: none;
                    padding: 0;
                    margin: 0;
                }

                    .social-login .socials li {
                        display: inline-block;
                        margin-right: 10px;
                    }
        </style>
    </head>
<body>
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><a href="/"><img src="~/Images/avatar.jpg" alt="sing up image"></a></figure>
                    <a href="~/TaiKhoan/DangKy" class="signup-image-link">Create an account</a>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">LOG IN ADMIN</h2>
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" style="color: red; padding-bottom: 10px;">@ViewBag.ErrorMessage</div>
                    }
                    <form action="~/Admin/Admin/Login" method="POST" class="register-form" id="login-form">
                        <div class="form-group">
                            <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="your_name" id="your_name" placeholder="Your Name" required />
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="your_pass" id="your_pass" placeholder="Password" required />
                            <span class="toggle-password" id="toggle-password"><i class="zmdi zmdi-eye"></i></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                            <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                        </div>
                    </form>
                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- JS -->
    <script src="~/vendorAccount/jquery/jquery.min.js"></script>
    <script src="~/jsAccount/main.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const passwordField = document.getElementById("your_pass");
            const togglePasswordButton = document.getElementById("toggle-password");

            togglePasswordButton.addEventListener("click", function () {
                const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
                passwordField.setAttribute("type", type);

                // Thay đổi biểu tượng icon
                const icon = togglePasswordButton.querySelector("i");
                if (type === "password") {
                    icon.classList.remove("zmdi-eye-off");
                    icon.classList.add("zmdi-eye");
                } else {
                    icon.classList.remove("zmdi-eye");
                    icon.classList.add("zmdi-eye-off");
                }
            });
        });
    </script>
</body>
</html>